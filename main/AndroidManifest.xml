<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/splash_img"
        android:label="@string/app_name"
        android:roundIcon="@drawable/splash_img"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitnessApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".Screens.ViewAnswerActivity"
            android:exported="false" />
        <activity
            android:name=".Screens.ViewExerciseActivity"
            android:exported="false" />
        <activity
            android:name=".Screens.ExerciseDetailActivity"
            android:exported="false" />
        <activity
            android:name=".Screens.AddExerciseActivity"
            android:exported="false" />
        <activity
            android:name=".Screens.AccountActivity"
            android:exported="false" />
        <activity
            android:name=".Screens.QuestionActivity"
            android:exported="false" />
        <activity
            android:name=".Screens.FavoriteActivity"
            android:exported="false" />
        <activity
            android:name=".Screens.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"></activity>
    </application>

</manifest>