<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:elevation="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/style"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/exercise1"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:id="@+id/exercise_img"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_height="100dp"/>
        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/add_favorite"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:layout_below="@id/exercise_img"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_add_fav"
            android:layout_gravity="end"
            android:visibility="gone"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_height="30dp"/>
        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/remove_favorite"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:layout_below="@id/exercise_img"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_remove_fav"
            android:layout_gravity="end"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/exerciseName"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="X"
            android:layout_below="@id/exercise_img"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/bodyParts"
            android:layout_marginLeft="10dp"
            android:text="X"
            android:layout_below="@id/exerciseName"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/equipments"
            android:text="X"
            android:gravity="center"
            android:layout_below="@id/bodyParts"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/level"
            android:text="X"
            android:gravity="center"
            android:layout_below="@id/equipments"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>



    </RelativeLayout>


</androidx.cardview.widget.CardView>